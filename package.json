{
  "name": "express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Simple express typescript application boilerplate",
  "main": "dist/index.js",
  "scripts": {
    "lint": "echo \"Running lint\"",
    "build": "echo \"Running buikd\"",
    "security-checker": "echo \"Checking security\"",
    "test": "NODE_ENV=test nyc mocha",
    "coverage": "NODE_ENV=test nyc mocha --reporter=json > coverage.json",
    "serve-dev": "echo \"Serving dev\"",
    "precommit": "npm run lint && npm run build && npm run test && npm run security-checker"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test/*.spec.js",
      "build/**/*.js"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prooofzizoo/express-typescript-boilerplate.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "express",
    "expressjs",
    "typescript",
    "application",
    "boilerplate",
    "starter"
  ],
  "author": "Adil AJJEMAMI <adilajjemami@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prooofzizoo/express-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/prooofzizoo/express-typescript-boilerplate#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "helmet": "^3.12.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/helmet": "^0.0.37",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.0",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "retire": "^2.0.0-beta.5",
    "source-map-support": "^0.5.4",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "typescript": "^2.7.2"
  }
}
